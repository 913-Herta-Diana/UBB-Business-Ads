<Window x:Class="Frontend.FAQ.AdminMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.FAQ"
        mc:Ignorable="d"
        Title="AdminMode" Height="450" Width="800" Background="LightGray">
    <Grid>
        <Label Content="ADMIN MODE" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label Content="Feedback:" FontSize="20" HorizontalAlignment="Left" Margin="595,108,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="todoListBox" Margin="43,150,418,116">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Task}" Margin="5"/>
                        <Button Content="Delete" Click="DeleteButton_Click" Tag="{Binding ID}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="TODO List:" FontSize="20" HorizontalAlignment="Left" Margin="161,108,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
