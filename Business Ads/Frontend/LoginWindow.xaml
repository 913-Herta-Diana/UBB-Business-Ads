<Window x:Class="Frontend.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Business Login" Height="300" Width="300">
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock>
            Username:
        </TextBlock>
        <TextBox x:Name="UsernameTextBox" Width="200" Margin="10" LostFocus="TextBox_LostFocus"/>
        <TextBlock>
            Email:
        </TextBlock>
        <TextBox x:Name="EmailTextBox" Width="200" Margin="10" LostFocus="TextBox_LostFocus_Email"/>
        <TextBlock>
            Password:
        </TextBlock>
        <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="10" PasswordChar="*"/>
		<Button x:Name="LoginButton" Content="Log In" Width="200" Margin="10" Click="LoginButton_Click"/>
	</StackPanel>
</Window>
